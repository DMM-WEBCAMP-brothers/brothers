<h2>新規会員登録</h2>

  <%= form_for(resource, as: resource_name, url: registration_path(resource_name)) do |f| %>
    <%= render "devise/shared/error_messages", resource: resource %>

    <div class="row">
      <div class="col-xs-3">
        <label>名前</label>
      </div>
      <div class="col-xs-3 field">
        <label>(姓)</label>
        <%= f.text_field :last_name, autofocus: true %>
      </div>
      <div class="col-xs-3 field">
        <label>(名)</label>
        <%= f.text_field :first_name, autofocus: true %>
      </div>
    </div>

    <div class="row">
      <div class="col-xs-3">
        <label>フリガナ</label>
      </div>
      <div class="col-xs-3 field">
        <label>(セイ)</label>
        <%= f.text_field :last_name_kana, autofocus: true %>
      </div>
      <div class="col-xs-3 field">
        <label>(メイ)</label>
        <%= f.text_field :first_name_kana, autofocus: true %>
      </div>
    </div>

    <form class="form-horizontal">
      <div class="form-group row">
        <label class="col-xs-3">メールアドレス</label>
        <div class="col-xs-3 form-inline">
          <%= f.email_field :email, autofocus: true %>
        </div>
      </div>
    </form>

    <form class="form-horizontal">
      <div class="form-group row">
        <label class="col-xs-3">郵便番号(ハイフンなし)</label>
        <div class="col-xs-3 form-inline">
          <%= f.text_field :postcode %>
        </div>
      </div>
    </form>

    <form class="form-horizontal">
      <div class="form-group row">
        <label class="col-xs-3">住所</label>
        <div class="col-xs-9 form-inline">
          <%= f.text_field :address, size: 60 %>
        </div>
      </div>
    </form>

    <form class="form-horizontal">
      <div class="form-group row">
        <label class="col-xs-3">電話番号(ハイフンなし)</label>
        <div class="col-xs-3 form-inline">
          <%= f.text_field :phone_number %>
        </div>
      </div>
    </form>

    <form class="form-horizontal">
      <div class="form-group row">
        <label class="col-xs-3">パスワード(6文字以上)</label>
        <div class="col-xs-3 form-inline">
          <%= f.password_field :password %>
        </div>
      </div>
    </form>

    <form class="form-horizontal">
      <div class="form-group row">
        <label class="col-xs-3">パスワード(確認用)</label>
        <div class="col-xs-3 form-inline">
          <%= f.password_field :password_confirmation %>
        </div>
      </div>
    </form>

    <div class="actions">
      <%= f.submit "新規登録" %>
    </div>
  <% end %>

  <%= render "devise/shared/links" %>
