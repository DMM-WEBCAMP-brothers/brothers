<div class="row">
	<div class="col-xs-8 col-xs-offset-2">
		<h1>注文履歴一覧</h1>
		<table class="table">
			<thead>
				<tr>
					<th class="active">購入日時</th>
					<th class="active">購入者</th>
					<th class="active">注文個数</th>
					<th class="active">注文ステータス</th>
				</tr>
			</thead>
			<% @orders.each do |order| %>
			<tbody>
				<tr>
					<td>
						<%= link_to admins_order_path(order) do %>
							<%= order.created_at %>
						<% end %>
					</td>
					<td><%= order.member.fullname %></td>
					<td><%= order.order_products.all.sum(:total_number) %></td>
					<td><%= order.status %></td>
				</tr>
			</tbody>
			<% end %>
		</table>
	</div>
</div>