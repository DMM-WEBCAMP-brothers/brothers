<h3>ジャンル一覧・追加</h3>
<%= form_for(@new_genre, url: admins_genres_path) do |f| %>
	<p>
		ジャンル　<%= f.text_field :name %>
		<%= f.radio_button :is_valid, "有効" %>有効
  		<%= f.radio_button :is_valid, "無効" %>無効
  		<%= f.submit "追加", class: "btn btn-primary" %>
	</p>
<% end %>
<table class="table table-hover">
	<thead>
		<tr>
			<th class="text-center success">ジャンル</th>
			<th class="text-center success">状態</th>
			<th class="text-center success"></th>
		</tr>
	</thead>
	<tbody>
		<% @genres.each do |genre| %>
			<tr>
				<td class="text-center"><%= genre.name %></td>
				<td class="text-center"><%= genre.is_valid %></td>
				<td class="text-center">
					<%= link_to "編集する", edit_admins_genre_path(genre) %>
				</td>
			</tr>
		<% end %>
	</tbody>
</table>