<div class="center-block" style="width: 800px;">
	<h2>商品編集</h2>
	<div class="row">
		<div class="col-xs-5">
			<%= form_for(@product, url:admins_product_path) do |f| %>
				<p>
					<%= attachment_image_tag @product , :image, size: "300x200"  %>
				</p>
				<%= f.attachment_field :image,size: "190x150" %>
		</div>
		<div class="col-xs-7">
			<p>
				<%= f.label :"商品名" %>    <%= f.text_field :name %>
			</p>
			<p>
				<%= f.label :"商品説名" %><%= f.text_area :explanation %>
			</p>
			<p>
				<%= f.label :"ジャンル" %><%= f.collection_select(:genre_id, @genres, :id, :name) %>
			</p>
			<p>
				<%= f.label :"税抜き価格" %><%= f.text_field :price %>
			</p>
			<p>
				<%= f.label :"販売ステータス" %><%= f.select :is_sale, [["販売中", true], ["売り切れ", false]], include_blank: "選択して下さい" %>
			</p>
			<p>
				<%= f.submit '変更を保存',class: 'pull-right' %>
　			</p>
		</div>
			<% end %>
	</div>
</div>