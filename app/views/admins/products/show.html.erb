<div class="center-block" style="width: 800px;">
	<h2>商品詳細</h2>
	<div class="col-xs-5">
		<p>
			<%= attachment_image_tag @product , :image, size: "300x200"  %>
		</p>
	</div>
	<div class="col-xs-7">
		<p>
			商品名  <%= @product.name %>
		</p>
		<p>
			商品説明  <%= @product.explanation %>
		</p>
		<p>
			ジャンル  <%= @product.genre.name %>
		</p>
		<p>
			税込価格(税抜き価格)  <%= @product.price %>円
		</p>
		<p>
			販売ステータス<%= @product.is_sale_text %>
		</p>
		<p>
			<%= link_to "編集する", edit_admins_product_path(@product),class:'btn btn-primary pull-right', data: {"turbolinks" => false} %>
		</p>
	</div>
</div>