<h1>注文履歴一覧</h1>

<div class="row">
	<div class="col-xs-12">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th class="active">注文日</th>
					<th class="active">配送先</th>
					<th class="active">注文商品</th>
					<th class="active">支払金額</th>
					<th class="active">ステータス</th>
					<th class="active">注文詳細</th>
				</tr>
			</thead>
			<% @orders.each do |order| %>
			<tbody>
				<tr>
					<td><%= order.created_at %></td>
					<td>
						<%= order.shipping_postcode %><br/>
						<%= order.shipping_address %><br/>
						<%= order.shipping_name %>
					</td>
					<td></td>
					<td><%= order.total_price + order.postage %></td>
					<td><%= order.status %></td>
					<td><%= link_to "表示する", order_path(order), class: 'btn btn-primary' %></td>
				</tr>
			</tbody>
			<% end %>
		</table>
	</div>
</div>
