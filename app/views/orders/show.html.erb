<div class="row">
	<div class="col-xs-6">
		<h3>注文情報</h3>
		<table class="table table-bordered table-hover">
			<tr>
				<th class="success">注文日</th>
				<td><%= @order.created_at.to_s(:datetime_jp) %></td>
			</tr>
			<tr>
				<th class="success">配送先</th>
				<td>
					<%= @order.shipping_postcode %>
					<%= @order.shipping_address %>
					<%= @order.shipping_name %>
				</td>
			</tr>
			<tr>
				<th class="success">支払方法</th>
				<td><%= @order.payment_method %></td>
			</tr>
			<tr>
				<th class="success">ステータス</th>
				<td><%= @order.status_i18n %></td>
			</tr>
		</table>
	</div>
	<div class="col-xs-6">
		<h3>請求情報</h3>
		<table class="table table-bordered table-hover">
			<tr>
				<th class="success">商品合計</th>
				<td><%= @order.total_price %></td>
			</tr>
			<tr>
				<th class="success">配送料</th>
				<td><%= @order.postage %></td>
			</tr>
			<tr>
				<th class="success"><strong>ご請求額</strong></th>
				<td><%= @order.total_price + @order.postage %></td>
			</tr>
		</table>
	</div>
</div>
<div class="row">
	<div class="col-xs-8">
		<h3>注文内容</h3>
		<table class="table table-bordered table-hover">
			<thead>
				<tr>
					<th class="success">商品</th>
					<th class="success">単価(税込)</th>
					<th class="success">個数</th>
					<th class="success">小計</th>
				</tr>
			</thead>
			<% @order_products.each do |detail| %>
			<tbody>
				<tr>
					<td><%= detail.product.name %></td>
					<td><%= detail.product.tax_in_price %></td>
					<td><%= detail.total_number %></td>
					<td><%= detail.purchase_price %></td>
				</tr>
			</tbody>
			<% end %>
		</table>
	</div>
</div>