<h1>注文情報入力</h1>

<%= form_for(@order, url: orders_check_path,method: :get) do |f| %>
　 <h2>支払い方法</h2>
   <p>
      <%= f.radio_button :payment_method, 'クレジットカード' %>クレジットカード
      <%= f.radio_button :payment_method, '銀行振込' %>銀行振込

   <br>

   <h3>お届け先</h3>


      <div class>
        <%= f.radio_button :ooo, "0" %>ご自身の住所
        <br>
        <p><%= current_member.postcode + current_member.address + current_member.last_name + current_member.first_name %></p>
      </div>

      <br>

      <div class>
        <%= f.radio_button :ooo, "1" %>登録済住所から選択
        <p><%= select_tag :shipping, options_from_collection_for_select(Shipping.where(member_id: current_member.id),:id,:destination) %>
        </p>
      </div>

      <br>

      <div class>
        <%= f.radio_button :ooo, "2" %>新しいお届け先
        <p>
          <%= f.label :"郵便番号" %>
          <%= f.text_field :shipping_postcode %>
        </p>
        <p>
          <%= f.label :"住所" %>
          <%= f.text_field :shipping_address %>
        </p>
        <p>
          <%= f.label :"宛名" %>
          <%= f.text_field :shipping_name %>
        </p>
        <p><%= f.submit "確認画面へ進む" %></p>
<% end %>