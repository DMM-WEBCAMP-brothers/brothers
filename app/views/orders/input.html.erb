<h1>注文情報入力</h1>
<%= form_for(@order, url: orders_path) do |f| %>
　 <h2>支払い方法</h2>
   <p>
      <%= f.radio_button :payment_method, "クレジットカード" %>クレジットカード
      <%= f.radio_button :payment_method, "銀行振り込み" %>銀行振り込み
   <br>
   <h3>お届け先</h3>
      <div class>
        <%= f.radio_button :ooo, "a" %>ご自身の住所
        <br>
        <p><%= current_member.postcode + current_member.address + current_member.last_name + current_member.first_name %></p>
      </div>
      <br>

      <div class>
        <%= f.radio_button :ooo, "b" %>登録済住所から選択
        <p><%= f.collection_select :shipping_address, current_member.shippings, :id, :destination %></p>
      </div>

      <br>

      <div class>
        <%= f.radio_button :ooo, "c" %>新しいお届け先
        <p>郵便番号<%= f.text_field :shipping_postcode %></p>
        <p>住所<%= f.text_field :shipping_address %></p>
        <p>宛名<%= f.text_field :shipping_name %></p>

      </div>

      <br>
      <br>

        <p><%= f.submit "確認画面へ進む" %></p>
<% end %>