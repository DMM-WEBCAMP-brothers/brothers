<h1>注文情報入力</h1>

<div class="row">
  <div class="col">
    <%= form_for(@order, url: orders_check_path, method: :get) do |f| %>
    <section>
      <h2><strong>支払い方法</strong></h2>
      <%= f.radio_button :payment_method, :クレジットカード %>クレジットカード
      <%= f.radio_button :payment_method, :銀行振込 %>銀行振込
    </section>
    <section>
      <h2><strong>お届け先</strong></h2>
      <%= f.radio_button :ooo, "0" %>ご自身の住所<br/>
      <%= current_member.postcode + current_member.address + current_member.last_name + current_member.first_name %>
    </section>
    <section>
      <br/><%= f.radio_button :ooo, "1" %>登録住所から選択<br/>
      <%= select_tag :shipping, options_from_collection_for_select(Shipping.where(member_id: current_member.id), :id, :destination) %>
     <!--  <%= select_tag :shipping, options_for_select(Shipping.where(member_id: current_member.id).map { |e| e.destination  }) %> -->
    </section>
    <section>
      <%= f.radio_button :ooo, "2" %>新しいお届け先<br/>
      <div class="form-group">
        <div>
          <%= f.label :"郵便番号(ハイフンなし)" %>
          <%= f.text_field :shipping_postcode %>
        </div>
        <div>
          <%= f.label :"住所" %>
          <%= f.text_field :shipping_address %>
        </div>
        <div>
          <%= f.label :"宛名" %>
          <%= f.text_field :shipping_name %>
        </div>
      </div>
    </section>
    <%= f.submit '確認画面へ進む' %>
    <% end %>
  </div>
</div>
