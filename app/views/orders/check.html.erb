<h1>注文情報確認</h1>

<div class="row">
	<div class="col-xs-9">
		<table class="table table-bordered">
			<thead>
				<tr>
					<th class="active">商品名</th>
					<th class="active">単価(税込)</th>
					<th class="active">数量</th>
					<th class="active">小計</th>
				</tr>
			</thead>

			<% @cart_items.each do |cart_item| %>
			<tbody>
				<tr>
					<td>
						<%= attachment_image_tag cart_item.product, :image, :fill, 80, 50, format: 'jpeg' %>
						<%= cart_item.product.name %>
					</td>
					<td>
						<%= cart_item.product.price %>
					</td>
					<td>
						<%= cart_item.total_number %>
					</td>
					<td>
						<%= cart_item.total_number * cart_item.product.price %>
					</td>
				</tr>
			</tbody>
			<% end %>
		</table>
	</div>
</div>