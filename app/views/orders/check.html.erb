<div class="body">
注文情報確認
	<table class="table table-bordered">
			<thead>
				<tr>
					<th class="active">商品名</th>
					<th class="active">単価(税込)</th>
					<th class="active">数量</th>
					<th class="active">小計</th>
				</tr>
			</thead>
			<% @sum = 0 %>
			<% @cart_items.each do |cart_item| %>
				<tbody>
					<tr>
						<td>
							<%= attachment_image_tag cart_item.product, :image, :fill, 80, 50, format: 'jpeg' %>
							<%= cart_item.product.name %>
						</td>
						<td class="text-center"><%= cart_item.product.price %></td>
						<td class="text-center"><%= cart_item.total_number %></td>
						<td class="text-center"><%= cart_item.total_number * cart_item.product.price %></td>
					</tr>
				</tbody>
				<% @subtotal = cart_item.total_number * cart_item.product.price %>
				<% @sum += @subtotal %>
			<% end %>
		</table>
	<table class="table table-bordered">
		<% @postage = 800 %>
		<tr>
			<th class="succes">送料</th>
			<td><%= @postage %></td>
		</tr>
		<tr>
			<th class="succes">商品合計</th>
			<td><%= @sum %></td>
		</tr>
		<% @totall = @postage + @sum %>
		<tr>
			<th class="succes">請求金額</th>
			<td><%= @totall %></td>
		</tr>
	</table>
</div>

<h2>支払い方法</h2>
　　<p><%= @order.payment_method %></p>

<h2>お届け先</h2>
<%=@order.shipping_name %><%=@order.shipping_address %><%=@order.shipping_postcode %>


<%= form_for(@order, url: orders_path, method: :post) do |f| %>
        <%= f.hidden_field :member_id, :value => current_member.id %>
        <%= f.hidden_field :postage, :value => 800 %>
        <%= f.hidden_field :total_price, :value => @sum %>
        <%= f.hidden_field :payment_method, :value => @order.payment_method %>
        <%= f.hidden_field :shipping_name, :value => @order.shipping_name %>
        <%= f.hidden_field :shipping_postcode, :value => @order.shipping_postcode %>
        <%= f.hidden_field :shipping_address, :value => @order.shipping_address %>
        <%= f.hidden_field :status, :value => "a" %>

<%= f.submit "購入を確定する", class: 'btn btn-primary' %>

<% end %>











