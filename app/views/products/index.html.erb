<div class="container">
	<div class="row">
		<%= render 'genres/genre_search' %>
		<div class="col-xs-9">
			<div class="box">
				<h1>商品一覧</h1>
				<h2>(全<%= @products.count %>件)</h2>
					<% @products.each do |product| %>
						<div class="box1">
							<%= link_to product_path(product) do %>
								<%= attachment_image_tag product, :image, size: "190x150" %>
							<% end %>

							<p><%= product.name %></p>
							<p>¥<%= product.price %></p>
						</div>
					<% end %>
			</div>
		</div>
	</div>
</div>

