<h2>ショッピングカート</h2>
<%= button_to 'カートを空にする', @cart_items, method: :delete, data: {confirm: 'カートを空にして本当によろしいですか？'}, class: 'fbtn' %>
 <table class="table table-bordered">
  <thead>
    <tr bgcolor="#cccccc">
      <th>商品名</th>
      <th>単価（税込）</th>
      <th>数量</th>
      <th>小計</th>
      <th></th>
    </tr>
  </thead>
  <tbody>
    <% @products.each do |f| %>
    <tr>
      <th>f.name</th>
      <td>f.price</td>
    </tr>
      <td><%= form_for(cart_items) do |d| %>
          <%= d.number_field :total_number %>
          <%= d.dsubmit '変更' %>
          <% end %>
      </td>
    <tr>
      <td>each</td>
      <td><%= link_to "削除する", cart_items_path(), class:'btn-sm btn-danger',  method: :delete, data: {confirm: "削除しますか？"} %></td>
    </tr>
  </tbody>
</table>
<table class="table-bordered">
  <thead>
   <tr>
    <th bgcolor="#cccccc">合計金額</th><td>１００００００</td>
   </tr>
  </thead>
</table>
<span><%= link_to '買い物を続ける', products_path, :class => 'btn' %></span>