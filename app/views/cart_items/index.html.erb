<h2 class="text-success">ショッピングカート</h2>
<div clas="row">
    <p class="pull-right">
        <%= link_to "カートを空にする", cart_items_destroy_all_path, method: :delete, class:"btn btn-danger" %>
    </p>
    <table class="table table-hover table table-bordered">
        <thead>
            <tr>
               <th class="text-center success">商品名</th>
               <th class="text-center success">単価</th>
               <th class="text-center success">数量</th>
               <th class="text-center success">小計</th>
               <th class="text-center success "></th>
            </tr>
        </thead>
        <% @sum = 0 %>
        <% @cart_items.each do |cart_item| %>
            <tbody>
                <tr>
                    <td>
                        <%= attachment_image_tag cart_item.product, :image, size: "50x30" %>
                        <%= cart_item.product.name %>
                    </td>
                    <td class="text-center"><%= cart_item.product.price %></td>
                    <td class="text-center"> <%= cart_item.total_number %></td>
                    <td class="text-center"><%= cart_item.product.price * cart_item.total_number %>
                    </td>
                    <td class="text-center"><%= link_to "削除する", cart_item_path(cart_item), class:'btn-sm btn-danger', method: :delete, data: {confirm: "削除しますか？"} %>
                   </td>
                </tr>
            </tbody>
            <% @subtotal = cart_item.total_number * cart_item.product.price %>
            <% @sum += @subtotal %>
        <% end %>
    </table>
    <div class="row">
        <div class="col-xs-4 pull-left">
            <%= link_to "買い物を続ける", root_path, class: "btn btn-warning" %>
        </div>
        <div class="col-xs-4 pull-right">
            <table class="table">
                <tr>
                    <th class="active">合計金額</th>
                    <td><%= @sum %></td>
                </tr>
            </table>
        </div>
    </div>
</div>