<h1>マイページ</h1>

<div class="row">
	<div class="col">
		<p><strong>登録情報</strong></p>
		<%= link_to "編集する", edit_member_path(current_member), class: 'btn btn-primary btn-sm' %>
		<%= link_to "パスワードを変更する", edit_member_password_path, class: 'btn btn-primary btn-sm' %>
	</div>
</div>

<div class="row">
	<table class="table table-bordered">
		<tr>
			<th class="active">名前</th>
			<td><%= @member.last_name + @member.first_name %></td>
		</tr>
		<tr>
			<th class="active">カナ</th>
			<td><%= @member.last_name_kana + @member.first_name_kana %></td>
		</tr>
		<tr>
			<th class="active">郵便番号</th>
			<td><%= @member.postcode %></td>
		</tr>
		<tr>
			<th class="active">住所</th>
			<td><%= @member.address %></td>
		</tr>
		<tr>
			<th class="active">電話番号</th>
			<td><%= @member.phone_number %></td>
		</tr>
		<tr>
			<th class="active">メールアドレス</th>
			<td><%= @member.email %></td>
		</tr>
	</table>
</div>

<div class="row">
	<div class="col">
		<p><strong>配送先</strong></p>
		<a href="#" class="btn btn-primary" role="button">一覧を見る</a>
	</div>
</div>
<div class="row">
	<div class="col">
		<p><strong>注文履歴</strong></p>
		<%= link_to "一覧を見る", orders_path, class: 'btn btn-primary' %>
	</div>
</div>